md-dialog(ng-cloak='' )
  form
    md-toolbar
      .md-toolbar-tools
        h2 Employee Evaluation Scheduler
        span(flex='')
        md-button.md-icon-button(ng-click='cancel()')
          md-icon.mdi.mdi-calendar-plus
    md-dialog-content
      .md-dialog-content
        h2 {{teamName}} Members
        md-divider
        md-list
          div(flex='50', ng-repeat='member in teammembers')
            md-checkbox(ng-checked='exists(member.accountId.id, newSched.selected)', ng-click='toggle(member.accountId.id, newSched.selected)' ng-hide='member.accountId.id==accountId')
              | {{ member.accountId.firstname +" "+ member.accountId.lastname}}
        md-datepicker(ng-model='newSched.date', md-placeholder='Enter Date' type='string')

        md-input-container
          label Notes
          input(type='text' ng-model='newSched.notes')

        md-button.md-raised.md-primary(ng-click='submit(newSched)' ng-disabled='!(newSched.selected.length && newSched.notes && newSched.date)') Submit
        md-button.md-raised.md-warn(ng-click='cancel()') Cancel
